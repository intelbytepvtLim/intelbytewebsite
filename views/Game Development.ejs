    <!-- 2. Games We Build -->
<section class="container py-5">
  <h2 class="section-title text-center mb-4" style="color: rgb(223,10,10);">Games We Build</h2>
  <div class="row text-center">
    <div class="col-md-4 mb-4">
      <div class="game-card">
        <img src="../asert/teenpatti.jpg" alt="Teen Patti" />
