<% layout('layouts/boilerplate') %>
<body>
<div class="container my-5">
  <h2 class="text-center  fw-bold mb-4">Our Design Services</h2>
  <div class="row g-4 text-center">
    <div class="col-md-3">
      <div class="p-4 border rounded service-card shadow-sm">
        <i class="fas fa-pen-nib fa-2x mb-2 text-danger"></i>
        <h5>Logo Design</h5>
      </div>
    </div>
    <div class="col-md-3">
      <div class="p-4 border rounded service-card shadow-sm">
        <i class="fas fa-scroll fa-2x mb-2 text-warning"></i>
        <h5>Posters</h5>
      </div>
    </div>
    <div class="col-md-3">
      <div class="p-4 border rounded service-card shadow-sm">
        <i class="fab fa-instagram fa-2x mb-2 text-purple"></i>
        <h5>Social Media Graphics</h5>
      </div>
    </div>
    <div class="col-md-3">
      <div class="p-4 border rounded service-card shadow-sm">
        <i class="fas fa-desktop fa-2x mb-2 text-success"></i>
        <h5>UI/UX Design</h5>
      </div>
    </div>
  </div>
</div>


<!-- Portfolio Gallery -->
<div class="container my-5">
  <h2 class="text-center text-dark fw-bold mb-4">Portfolio Highlights</h2>
  <div class="row g-4">
    <div class="col-md-4">
      <img src="img/portfolio1.jpg" class="gallery-img" alt="Portfolio Item">
    </div>
    <div class="col-md-4">
      <img src="img/portfolio2.jpg" class="gallery-img" alt="Portfolio Item">
    </div>
    <div class="col-md-4">
      <img src="img/portfolio3.jpg" class="gallery-img" alt="Portfolio Item">
    </div>
  </div>
</div>

<!-- Design Process -->
<div class="container my-5">
  <h2 class="text-center text-success fw-bold mb-4">Our Design Process</h2>
  <div class="row g-3 text-center">
    <div class="col-md-3">
      <div class="step">1. Brainstorm</div>
    </div>
    <div class="col-md-3">
      <div class="step">2. Draft</div>
    </div>
    <div class="col-md-3">
      <div class="step">3. Feedback</div>
    </div>
    <div class="col-md-3">
      <div class="step">4. Final Delivery</div>
    </div>
  </div>
</div>

<!-- Tools We Use -->
<div class="container my-5 text-center">
  <h2 class="text-primary fw-bold mb-4">Tools We Use</h2>
  <div class="d-flex justify-content-center flex-wrap gap-4">
    <span class="tool-icon"><i class="fab fa-adobe text-danger"></i><br/>Photoshop</span>
    <span class="tool-icon"><i class="fas fa-pencil-alt text-warning"></i><br/>Illustrator</span>
    <span class="tool-icon"><i class="fab fa-figma text-primary"></i><br/>Figma</span>
    <span class="tool-icon"><i class="fas fa-brush text-success"></i><br/>Canva</span>
  </div>
</div>
</body>